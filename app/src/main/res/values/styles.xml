<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="single_widget_primary_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_widget_secondary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_widget_normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ingredients_fragment_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipe_fragment_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:background">@drawable/recipe_background_green</item>
        <item name="android:paddingBottom">@dimen/big_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fragment_step_description_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:minLines">2</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ingredients_list_item">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="recipe_list_item_logo">
        <item name="android:layout_width">@dimen/cupcake_logo_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:contentDescription">@string/logo_content_description</item>
    </style>

    <style name="recipe_list_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipe_list_item_primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mini_margin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="recipe_list_item_secondary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/mini_margin</item>
    </style>

    <style name="recipe_list_item_land_logo">
        <item name="android:layout_width">@dimen/cupcake_logo_size</item>
        <item name="android:layout_height">@dimen/cupcake_logo_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:contentDescription">@string/logo_content_description</item>
    </style>

    <style name="recipe_list_item_land_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipe_list_item_land_primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="recipe_list_item_land_secondary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>

    <style name="step_list_item_title">
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="step_list_item_primary_text">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/normal_margin</item>
        <item name="android:paddingEnd">@dimen/normal_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
